        <form  action="/vendor/update/{{vendor.id}}" method="post">
        <div class="form-group row" hidden>
          <label for="no" class="col-sm-4 col-form-label">No</label>
            <div class="col-sm-4">
              <input class="form-control form-control-sm" type="text" name="no" readonly value={{noVendor}}>
            </div>
        </div>

        <div class="form-group row" hidden>
          <label for="noVendor" class="col-sm-4 col-form-label">No Vendor</label>
            <div class="col-sm-4">
                <select class="form-control form-control-sm" name="noVendor">
                {{#each nv}}
                <option value="1000">"{{no-vendor}}"</option>
                {{/each}}
                </select>
            </div>
        </div>

        <div class="form-group row">
          <label for="vendorName" class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
              <input class="form-control form-control-sm" value="{{vendor.name}}" type="text" name="vendorName" placeholder="Vendor Name">
            </div>
        </div>

        <div class="form-group row">
          <label for="dateRegister" class="col-sm-4 col-form-label">Date Register</label>
          <div class="col-sm-8">
            <input class="form-control form-control-sm" value="{{date}}" type="date" name="dateRegister">
          </div>
        </div>

        <div class="form-group row">
          <label for="serviceType" class="col-sm-4 col-form-label">Service Type</label>
            <div class="col-sm-8">
              <input class="form-control form-control-sm" value="{{vendor.service_type}}" type="text" name="serviceType" placeholder="Service Type">
            </div>
        </div>
        
        <div class="form-group row">
          <label for="bussinessSegment" class="col-sm-4 col-form-label">Bussiness Segment</label>
          <div class="col-sm-8">
            <select class="form-control form-control-sm" name="bussinessSegment">
              {{#each bussiness_segment}}
              <option value={{id}}>{{bussiness_segment}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        
        <div class="form-group row">
          <label for="country" class="col-sm-4 col-form-label">Country</label>
          <div class="col-sm-8">
            <select class="form-control form-control-sm" name="country">
            {{#each countries}}
              <option value={{id}}>{{country}}</option>
            {{/each}}
            </select>
          </div>
        </div>
        
        <div class="form-group row">
          <label for="address" class="col-sm-4 col-form-label">Address</label>
            <div class="col-sm-8">
              <input class="form-control form-control-sm" value="{{vendor.address}}" type="text" name="address" placeholder="Address">
            </div>
        </div>

        <div class="form-group row">
          <label for="number" class="col-sm-4 col-form-label">Number</label>
            <div class="col-sm-8">
              <input class="form-control form-control-sm" value="{{vendor.phone_number}}" type="text" name="phoneNumber" placeholder="Phone Number">
            </div>
        </div>

        <div class="form-group row">
          <label for="contactName" class="col-sm-4 col-form-label">Contact Name</label>
            <div class="col-sm-8">
              <input class="form-control form-control-sm" type="text" value="{{vendor.contact_name}}" name="contactName" placeholder="Contact Name">
            </div>
        </div>

        <div class="form-group row">
          <label for="contactNumber" class="col-sm-4 col-form-label">Contact Number</label>
            <div class="col-sm-8">
              <input class="form-control form-control-sm" type="text" name="contactNumber" value="{{vendor.contact_number}}" placeholder="Contact Number">
            </div>
        </div>
        
        <div class="form-group row">
          <label for="email" class="col-sm-4 col-form-label">Contact Email</label>
            <div class="col-sm-8">
              <input class="form-control form-control-sm" value="{{vendor.contact_email}}" type="email" name="contactEmail" placeholder="Email">
            </div>
        </div>

        <div class="form-group row">
          <label for="email" class="col-sm-4 col-form-label">Contact Position</label>
            <div class="col-sm-8">
              <input class="form-control form-control-sm" type="text" value="{{vendor.contact_position}}" name="contactPosition" placeholder="Contact Position">
            </div>
        </div>

        <input class="btn btn-success btn-sm" type="submit" value="Submit Change">
        <div class="btn-group mr-2">
            <a href="/vendor/delete/{{vendor.id}}" class="btn btn-danger btn-sm">Delete</a>
        </div>
      </fieldset>
    </form>

