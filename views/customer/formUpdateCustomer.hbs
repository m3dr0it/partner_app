              <div class="container-fluid">
              <section class="row justify-content-center">
                <section class="col-12 col-sm-8 col-md-6">
                  <div class="header">
                    <center>
                    <h3>Update Customer Information </h3>
                  </center>
                  </div>
                  <br>

              <form  action="/customer/update/{{customer.id}}" method="post">
              <div class="form-group row" hidden>
                <label for="noCustomer" class="col-sm-4 col-form-label">No Customer</label>
                <div class="col-sm-4">
                  <input hidden id="noCustomer" class="form-control form-control-sm" type="text" name="noCustomer" value={{customer.no}} readonly>
                </div>
              </div>

              <div class="form-group row" hidden>
                <label for="noVendor" class="col-sm-4 col-form-label">Vendor</label>
                <div class="col-sm-4">
                  <select id="noVendor" class="form-control form-control-sm" name="noVendor" >
                    <option value="1000" id="noVendor">1000</option>
                  </select>
                </div>
              </div>

              <div class="form-group row">
                <label for="customerName" class="col-sm-4 col-form-label">Customer Name</label>
                <div class="col-sm-8">
                    <input type="text" name="customerName" class="form-control form-control-sm" placeholder="Customer Name" value="{{customer.name}}">
                </div>
              </div>

              <div class="form-group row">
                <label for="dateRegister" class="col-sm-4 col-form-label">Register Date</label>
                <div class="col-sm-8">
                    <input type="date" name="dateRegister" class="form-control form-control-sm"  value={{date}}>
                </div>
              </div>

              <div class="form-group row">
                <label for="originOfOpportunity" class="col-sm-4 col-form-label">Origin Of Opportunity</label>
                <div class="col-sm-8">
                  <select class="form-control form-control-sm" name="originOfOpportunity">
                    {{#each originOfOpportunity}}
                    <script>
                      console.log("tes")
                      console.log("{{origin-of-opportunity}}")                        
                    </script>
                      <option id="originOfOpportunity" value={{id}}> {{origin_of_opportunity}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group row">
                <label for="bussinessSegment" class="col-sm-4 col-form-label">Bussiness Segment</label>
                <div class="col-sm-8">
                  <select aria-checked="false" class="form-control form-control-sm" name="bussinessSegment">
                    {{#each bussinessSegment}}
                      <option value={{id}}>{{bussiness_segment}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group row">
                <label for="country" class="col-sm-4 col-form-label">Country</label>
                <div class="col-sm-8">
                  <select id="country" class="form-control form-control-sm" name="country">
                    {{#each countries}}
                      <option value={{id}}>{{country}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group row">
                <label for="address" class="col-sm-4 col-form-label">Address</label>
                <div class="col-sm-8">
                  <input type="text" name="address" placeholder="Address" class="form-control form-control-sm" value="{{customer.address}}">
                </div>
              </div>

              <div class="form-group row">
                <label for="number" class="col-sm-4 col-form-label">Telephone</label>
                <div class="col-sm-8">
                  <input type="number" name="phoneNumber" placeholder="Phone Number" class="form-control form-control-sm" value="{{customer.phone_number}}">
                </div>
              </div>

              <div class="form-group row">
                <label for="contactName" class="col-sm-4 col-form-label">Contact Name</label>
                <div class="col-sm-8">
                  <input type="text" name="contactName" placeholder="Contact Name" class="form-control form-control-sm" value="{{customer.contact_name}}">
                </div>
              </div>

              <div class="form-group row">
                <label for="contactNumber" class="col-sm-4 col-form-label">Contact Number</label>
                <div class="col-sm-8">
                  <input type="number" name="contactNumber" placeholder="Contact Number" class="form-control form-control-sm" value="{{customer.contact_number}}">
                </div>
              </div>

              <div class="form-group row">
                <label for="contactNumber" class="col-sm-4 col-form-label">Contact Email</label>
                <div class="col-sm-8">
                  <input type="email" name="contactEmail" placeholder="Contact Email" class="form-control form-control-sm" value="{{customer.contact_email}}">
                </div>
              </div>

              <div class="form-group row">
                <label for="contactNumber" class="col-sm-4 col-form-label">Position</label>
                <div class="col-sm-8">
                  <input type="text" name="contactPosition" placeholder="Contact Position" class="form-control form-control-sm" value="{{customer.contact_position}}">
                </div>
              </div>
                  <input class="btn btn-success btn-sm" type="submit" value="Submit Change">
                  <div class="btn-group mr-2">
                    <a href="/customer/delete/{{customer.id}}" class="btn btn-danger btn-sm">Delete</a>
                  </div>
              </form>

            </section>
          </section>          
